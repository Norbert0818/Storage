@page "/admin/orders"
@inject DataContext dbContext
@using Plugins.DataStore.MySQL
@using Microsoft.EntityFrameworkCore


@if (allOrders == null)
{
    <p>Loading orders...</p>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Order Number</th>
                <th>Customer Name</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in allOrders)
            {
                <tr>
                    <td>@order.OrderNumber</td>
                    <td>@order.CustomerName</td>
                    <td>@order.Status</td>
                    <td>
                        @if (order.Status != OrderStatusEnum.Confirmed && order.Status != OrderStatusEnum.Declined)
                        {
                            <button class="btn btn-success" @onclick="() => UpdateOrderStatus(order, OrderStatusEnum.Confirmed)">Confirm</button>
                            <button class="btn btn-danger" @onclick="() => UpdateOrderStatus(order, OrderStatusEnum.Declined)">Decline</button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

}

@code {
    private List<Orders> allOrders;

    protected override async Task OnInitializedAsync()
    {
        allOrders = await dbContext.Orders.ToListAsync();
    }
    private async Task UpdateOrderStatus(Orders order, OrderStatusEnum status)
    {
        order.Status = status;
        dbContext.Orders.Update(order);
        await dbContext.SaveChangesAsync();
    }
}
