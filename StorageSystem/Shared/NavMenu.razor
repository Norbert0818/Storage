@using Microsoft.AspNetCore.Authorization

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">StorageSystem</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <AuthorizeView Roles="Admin,Manager">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="admin/orders">
                    <span class="oi oi-task" aria-hidden="true"></span> Orders Admin
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="categories">
                    <span class="oi oi-task" aria-hidden="true"></span> Manage Categories
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="editingproducts">
                    <span class="oi oi-task" aria-hidden="true"></span> Manage Products
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="users">
                    <span class="oi oi-person" aria-hidden="true"></span> Users
                </NavLink>
            </div>
            
        </AuthorizeView>
        <AuthorizeView Roles="Admin,Employee">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="worker/tasks">
                    <span class="oi oi-person" aria-hidden="true"></span> Tasks
                </NavLink>
            </div>
        </AuthorizeView>
        <AuthorizeView Roles="User,Admin,Manager,Employee">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="orders">
                    <span class="oi oi-list-rich" aria-hidden="true"></span> Orders
                </NavLink>
            </div>
        </AuthorizeView>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="products">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Products
            </NavLink>
        </div>
        
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
